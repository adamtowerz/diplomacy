{
  "name": "megalith",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start:local": "LOCAL_DEV=true NODE_ENV=dev nodemon --exec tsx ./src/index.ts",
    "start:dev": "NODE_ENV=dev nodemon --exec tsx src/index.ts",
    "start:prod": "cd dist && LOCAL_DEV=true NODE_ENV=prod PORT='8080' node app.mjs",
    "start:slack-refresher:local": "LOCAL_DEV=true NODE_ENV=dev nodemon --exec tsx src/slack-refresher/local-run.ts",
    "start:slack-refresher:dev": "NODE_ENV=dev nodemon --exec tsx src/slack-refresher/local-run.ts",
    "test": "jest",
    "build": "yarn workspaces foreach -ptvR --from megalith run build && yarn run build-iso",
    "build-iso": "rm -rf dist && yarn run typecheck && node build.mjs",
    "gen-openapi": "LOCAL_DEV=true NODE_ENV=dev tsx gen-openapi.ts",
    "cdk-deploy": "npx aws-cdk deploy megalith",
    "cdk-setup": "npx aws-cdk deploy megalith-setup",
    "typecheck": "tsc -noEmit",
    "eslint": "eslint src/",
    "lint": "prettier --config='../../.prettierrc.json' *; eslint src/",
    "lint-autofix": "prettier --config='../../.prettierrc.json' --write src/*"
  },
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@common/cache": "workspace:*",
    "@common/core": "workspace:*",
    "@common/storage": "workspace:*",
    "@common/type-spec": "workspace:*",
    "@common/web-server": "workspace:*",
    "@googleapis/admin": "^12.0.0",
    "@googleapis/docs": "^2.0.1",
    "@linear/sdk": "^2.6.0",
    "@slack/bolt": "^3.12.2",
    "express-oauth2-jwt-bearer": "^1.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash-es": "^4.17.21",
    "node-fetch": "2",
    "openai": "4.38.5"
  },
  "devDependencies": {
    "@deftly/cdk": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.7",
    "@types/node-fetch": "2",
    "aws-cdk": "^2.139.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.39.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.15",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  }
}
